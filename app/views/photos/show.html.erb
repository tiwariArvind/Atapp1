<p>
	<strong>image:</strong>
  	<%= image_tag @photo.image_url(:thumb).to_s %>
	</p>
	<%= link_to 'Back', user_albums_path(current_user,@album) %>
	
<% @photo.comments.each do |comment|%>
<li> <%= comment.text %> </li>
<% end %>

 <h2>New Comment</h2>

  <%= form_for :comment, url: user_album_comments_path, method: :post do |f| %>
  <p>
  <%= f.label :text %><br />
  <%= f.text_area :text %>
  <% f.hidden_field :id, value: @photo.id %>
  </p>
  <p>
  <%= f.submit "Submit" %></p>
<% end %>



